load("components.asc");


application.onAppStart = function() {
	application.allowDebug = true;
	trace("ON appStart");
};



application.onConnect = function(newClient, newUserName) {

	trace("onConnect for the 1on1 Chat application. username is : " + newUserName);
	gFrameworkFC.getClientGlobals(newClient).username = newUserName;
	var dummy = application.acceptConnection(newClient);
	trace("here's our dummy value: " + dummy);
};

application.onDisconnect = function(client) {
	
	trace("onDisconnect of main.asc");
	application.clearStreams("/");
	application.gc();
};

application.onConnectAccept = function(client, username){
    trace("Connection accepted for "+username);
}
 

application.onConnectReject = function(client, username){
    trace("Connection rejected for "+username);
}


